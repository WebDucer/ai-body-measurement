{
  "$schema": "https://opencode.ai/config.json",
  "mcp": {
    "Context7": {
      "type": "local",
      "command": ["npx", "-y", "@upstash/context7-mcp"],
      "enabled": true
    },
    "MicrosoftLearn": {
      "type": "remote",
      "url": "https://learn.microsoft.com/api/mcp",
      "enabled": true
    }
  },
  "agent": {
    "build": {
      "mode": "primary",
      "model": "opencode/claude-sonnet-4-5"
    },
    "plan": {
      "mode": "primary",
      "model": "opencode/claude-sonnet-4-5"
    }
  }
}