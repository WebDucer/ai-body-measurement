{
  "$schema": "https://opencode.ai/config.json",
  "mcp": {
    "Context7": {
      "type": "local",
      "command": ["npx", "-y", "@upstash/context7-mcp"],
      "enabled": true
    },
    "MicrosoftLearn": {
      "type": "remote",
      "url": "https://learn.microsoft.com/api/mcp",
      "enabled": true
    }
  },
  "provider": {
    "opencode": {
      "models": {
        "claude-sonnet-4-6": {
          "limit": {
            "input": 200000,
            "context": 200000,
            "output": 64000
          }
        }
      }
    } 
  }
}