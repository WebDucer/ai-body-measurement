<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:resources="clr-namespace:BodyMeasurement.Resources.Strings"
             x:Class="BodyMeasurement.Views.OnboardingPage"
             NavigationPage.HasNavigationBar="False">

    <Grid RowDefinitions="*,Auto">

        <!-- Carousel View for onboarding screens -->
        <CarouselView x:Name="OnboardingCarousel"
                     Grid.Row="0"
                     IndicatorView="indicatorView"
                     Loop="False">
            <CarouselView.ItemTemplate>
                <DataTemplate>
                    <ContentView Content="{Binding .}" />
                </DataTemplate>
            </CarouselView.ItemTemplate>
        </CarouselView>

        <!-- Bottom Navigation -->
        <Grid Grid.Row="1" 
              ColumnDefinitions="*,Auto,*"
              Padding="16,8"
              BackgroundColor="{AppThemeBinding Light=#F5F5F5, Dark=#2C2C2C}">
            
            <!-- Skip Button -->
            <Button Grid.Column="0"
                   x:Name="BtnSkip"
                   Text="{x:Static resources:Strings.OnboardingSkip}"
                   Clicked="OnSkipClicked"
                   BackgroundColor="Transparent"
                   TextColor="{AppThemeBinding Light=#666666, Dark=#AAAAAA}"
                   HorizontalOptions="Start" />

            <!-- Indicator View -->
            <IndicatorView x:Name="indicatorView"
                          Grid.Column="1"
                          IndicatorColor="{AppThemeBinding Light=#E0E0E0, Dark=#3C3C3C}"
                          SelectedIndicatorColor="{AppThemeBinding Light=#2196F3, Dark=#1976D2}"
                          HorizontalOptions="Center"
                          VerticalOptions="Center" />

            <!-- Next/Done Button -->
            <Button Grid.Column="2"
                   x:Name="BtnNext"
                   Text="{x:Static resources:Strings.OnboardingNext}"
                   Clicked="OnNextClicked"
                   BackgroundColor="{AppThemeBinding Light=#2196F3, Dark=#1976D2}"
                   TextColor="White"
                   HorizontalOptions="End" />
        </Grid>

    </Grid>

</ContentPage>
